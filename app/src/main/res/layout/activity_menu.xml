<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fs_sournary.networkingsample.MenuActivity">

    <Button
        android:id="@+id/button_sample_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_sample_1"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_sample_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_sample_2"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sample_1" />

    <Button
        android:id="@+id/button_sample_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_sample_3"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_sample_2" />

</android.support.constraint.ConstraintLayout>
